        <title>Switch statement</title>
    </head>
    <body>
        <h1>Switch statement</h1>
        <script>
            // multiple case switch program
            let fruit = 'apple';
            switch(fruit) {
                case 'apple':
                case 'mango':
                case 'pineapple':
                    console.log(`${fruit} is a fruit.`);
                    break;
                default:
                    console.log(`${fruit} is not a fruit.`);
                    break;
            }
    </script>
    </body>
</html>